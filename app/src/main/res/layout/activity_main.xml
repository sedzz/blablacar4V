<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">



    <fragment
        android:id="@+id/header"
        android:name="org.cuatrovientos.blabla4v.fragments.HeaderFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout="@layout/fragment_header" />


    <fragment xmlns:map="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        map:layout_width="match_parent"
        map:layout_height="555dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        tools:context=".models.Map" />

    <fragment
        android:id="@+id/driversFragment"
        android:name="org.cuatrovientos.blabla4v.fragments.DriversFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout="@layout/fragment_drivers"
        android:visibility="gone"/>

    <fragment
        android:id="@+id/menuInterfaz"
        android:name="org.cuatrovientos.blabla4v.fragments.MenuFragment"
        android:layout_width="470dp"
        android:layout_height="739dp"
        tools:ignore="MissingConstraints"
        tools:layout="@layout/fragment_menu"
        tools:layout_editor_absoluteX="-30dp"
        tools:layout_editor_absoluteY="-4dp" />

    <Button
        android:id="@+id/btnMenuRoute"
        android:layout_width="57dp"
        android:layout_height="63dp"
        android:layout_marginTop="116dp"
        android:layout_marginBottom="569dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/menuInterfaz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header"
        app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>